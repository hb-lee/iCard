<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_myexam_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_item"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/contacts_list_item_pic"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:src="@drawable/contact_default_pic" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/contacts_list_item_pic"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/contacts_list_item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account"
                android:textColor="#666666"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/contacts_list_item_account"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/sub_list"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
