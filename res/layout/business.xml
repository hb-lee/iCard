<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    
    
    <RelativeLayout
        android:id="@+id/business_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp" >

        <ImageButton
            android:id="@+id/business_QRcode"
            android:layout_width="@dimen/common_title_bar_icon_width"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_common_title_bar_btn"
            android:scaleType="center"
            android:src="@drawable/qrcode" />
        
        <Button
            android:id="@+id/business_btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/search_btn_background"
            android:gravity="center"
            android:text="@string/search"
            android:textSize="12sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/business_rlSearchFrameDelete"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_toStartOf="@id/business_btnSearch"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/business_search_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/search_frame"
                android:hint="@string/search_business_hint"
                android:paddingEnd="32dp"
                android:paddingStart="32dp"
                android:singleLine="true"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/business_ivDeleteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:src="@drawable/delete"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>
    
    <GridView
        android:id="@+id/business_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/index_shape"
        android:columnWidth="80dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth" >
    </GridView>

    <TextView
        android:id="@+id/business_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/gray"
        android:drawableLeft="@drawable/recommend_near"
        android:gravity="center_vertical"
        android:text="@string/recommend_near"
        android:textColor="@color/theme_color"
        android:textSize="14sp" />

    <ListView
        android:id="@+id/business_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>