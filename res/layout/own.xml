<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_bar_height"
        android:background="@color/theme_color" >

        <TextView
            android:id="@+id/own_bill"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:text="@string/own_bill"
            android:scaleType="center"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/bill_icon" />

        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true">
            <ImageButton
            android:id="@+id/own_friends"
            android:layout_width="@dimen/common_title_bar_icon_width"
            android:layout_height="fill_parent"
           	android:layout_marginRight="5dp"
           	android:layout_weight="1"
            android:background="@drawable/bg_common_title_bar_btn"
            android:scaleType="center"
            android:src="@drawable/friends" />
        
        <ImageButton
            android:id="@+id/own_add"
            android:layout_toRightOf="@id/own_friends"
            android:layout_width="@dimen/common_title_bar_icon_width"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_common_title_bar_btn"
            android:scaleType="center"
            android:src="@drawable/add" />
        </LinearLayout>
        
    </RelativeLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/gray"
        android:orientation="horizontal">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:id="@+id/own_photo"
            android:background="@drawable/example1"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/own_name"
                android:text="@string/own_name"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/own_phone"
                android:text="@string/own_phone"/>
        </LinearLayout>
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/own_parcel"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/silver" >

        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:scaleType="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:id="@+id/own_my_parcel"
            android:text="@string/own_my_parcel"/>
        <ImageButton
            android:id="@+id/own_parcel_open"
            android:layout_width="@dimen/common_title_bar_icon_width"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_common_title_bar_btn"
            android:scaleType="center"
            android:src="@drawable/parcel_open" />
    </RelativeLayout>
</LinearLayout>
