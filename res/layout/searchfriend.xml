<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_bar_height"
        android:background="@color/theme_color" >

        <TextView
            android:id="@+id/searchfriend_cancel"
            android:layout_width="@dimen/common_title_bar_icon_width"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_common_title_bar_btn"
            android:scaleType="center"
            android:text="@string/searchfriend_cancel"/>

        <EditText
            android:id="@+id/searchfriend_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/search_input_hint"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:drawableRight="@drawable/search"
            android:textSize="@dimen/common_title_text_size" />
    </RelativeLayout>

</LinearLayout>
